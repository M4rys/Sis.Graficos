from OpenGL.GL import *
import math

class Cilindro:
    def __init__(self):
        pass

    def draw(self):
        circle_points = 100

        glBegin(GL_LINE_LOOP);

        for i in range(circle_points):
            angle = 2 * math.pi * i / circle_points

            glVertex2f(math.cos(angle), math.sin(angle))

        glEnd();